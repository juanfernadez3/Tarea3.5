<Window x:Class="RegistroInscripcion1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroInscripcion1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Name="BarraMenu" IsMainMenu="True">
            <MenuItem Name="MenuItemPersonas" Header="Personas" FontFamily="Times New Roman" FontSize="20" Click="MenuItemPersonas_Click">

            </MenuItem>
            <MenuItem Name="MenuItemInscripcion" Header="Inscripciones"  FontFamily="Times New Roman" FontSize="20" Click="MenuItemInscripcion_Click">
            </MenuItem>

            <MenuItem Name="MenuItemConsulta" Header="Consultas"  FontFamily="Times New Roman" FontSize="20" Click="MenuItemConsulta_Click">
                <MenuItem Name="MenuItemConsultarPersonas" Header="Consultar Personas" Click="MenuItemConsultarPersonas_Click"></MenuItem>
                <MenuItem Name="MenuItemConsultarinscripcion" Header="Consultar inscripcion" Click="MenuItemConsultarinscripcion_Click"></MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
